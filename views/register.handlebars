<h1>Login</h1>
<h3 id="waiter-greet">Hello, {{username}}</h3>
<p id="login-success">{{success}}</p>
<p id="login-error">{{error}}</p>
<form action="/login" method="post">
    <p name="waiterName" value={{username}}></p>
    <label for="username">e-mail:</label>
    <input type="email" id="email" name="email" required><br><br>
    <label for="password">Password:</label>
    <input type="password" id="password" name="password" required><br><br>
    <button type="submit">Login</button>
</form>

<script>
    let error = document.querySelector('#login-error');
    let success = document.querySelector('#login-success');

    if(error.textContent != ''){
        setTimeout(function(){
            error.textContent = '';
        }, 5000)
    }

    if(success.textContent != ''){
        setTimeout(function(){
            success.textContent = '';
        }, 5000)
    }

</script>
