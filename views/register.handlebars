<div id="login-container-div">
    <h1 id="login-main-heading">Login</h1>
    <h3 id="waiter-greet">Hello, {{username}}</h3>
    <p id="login-success">{{success}}</p>
    <p id="login-error">{{error}}</p>
    <form action="/login" method="post" id="login-form">
        <p name="waiterName" value={{username}}></p>
        <label for="username" class="login-labelss">E-mail:</label>
        <input type="email" id="email" name="email" class="log-inputs" placeholder="email@gmail.com" required><br><br>
        <label for="password" class="login-labelss">Password:</label>
        <input type="password" id="password" name="password" class="log-inputs" placeholder="****" required><br><br>
        <button type="submit" id="login-btn">Login</button>
    </form>

    <script>
        let error = document.querySelector('#login-error');
        let success = document.querySelector('#login-success');

        if(error.textContent != ''){
            setTimeout(function(){
                error.textContent = '';
            }, 5000)
        }

        if(success.textContent != ''){
            setTimeout(function(){
                success.textContent = '';
            }, 5000)
        }

    </script>
</div>
