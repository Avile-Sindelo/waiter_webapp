<script>
    let invalid = document.querySelector('#invalid-name');
    let error = document.querySelector('#index-error-message');
    let success = document.querySelector('#index-success-message');

    if(invalid.textContent != ''){
        setTimeout(function(){
            invalid.textContent = '';
        }, 4500)
    }

    if(error.textContent != ''){
        setTimeout(function(){
            error.textContent = '';
        }, 4500)
    }

    if(success.textContent != ''){
        setTimeout(function(){
            success.textContent = '';
        }, 4500)
    }
</script>